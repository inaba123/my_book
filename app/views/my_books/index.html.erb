<div class="col-md-12">
<p id="notice"><%= notice %></p>

<h1>蔵書一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th>価格</th>
      <th>出版社</th>
      <th>出版日</th>
      <th>ISBN</th>
      <th>表紙</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_books.each do |my_book| %>
      <tr>
        <td><%= my_book.book_title %></td>
        <td><%= my_book.author’s_name %></td>
        <td><%= number_to_currency(book.price, unit: "¥", perception: 0) %></td>
        <td><%= my_book.publisher %></td>
        <td><%= my_book.release_date %></td>
        <td><%= my_book.code %></td>
        <td><img src="<%= my_book.picture %>" class="img-responsive"></td>
        <td><%= link_to '観覧', my_book, class: "btn btn-success btn-lg" %></td>
        <td><%= link_to '編集', edit_my_book_path(my_book), class: "btn btn-info btn" %></td>
        <td><%= link_to 'Destroy', my_book, method: :delete, data: { confirm: '本当にいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい書籍の登録', new_my_book_path, class: "btn btn-primary btn-lg" %>
</div>
